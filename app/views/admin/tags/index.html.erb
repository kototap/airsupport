<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto pt-5">
      <h3><span class="admin-title">タグ一覧/追加</span></h3>
    </div>
  </div>
</div>

<div class="container">
  <%= render "error", obj: @tag %>
  <div class="row pt-5">
    <div class="col-md-8 mx-auto text-right">
      <%= form_with model: @tag, url: admin_tags_path do |f| %>
        <div class="form-group d-flex justify-content-center">
          <%= f.label :name %>：
          <%= f.text_field :name, autofocus: true %>
          <%= f.submit '追加する', class: 'btn btn-outline-success btn-sm ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row py-5">
    <div class="col-md-6 offset-3 text-center">
      <table class="table">
        <thead>
          <tr>
            <th>タグ名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class: 'btn btn-outline-info btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>