<div class="container">

  <%= render "error", obj: @tag %>

  <div class="row pt-5">
    <div class="col-md-8 offset-3 text-center">
      <%= form_with model: @tag, url: admin_tags_path do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true %>
          <%= f.submit '追加する' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row pt-5">
    <div class="col-md-6 offset-3 text-center">
      <table class="table">
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
            <td><%= link_to "編集する", edit_admin_tag_path(tag.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>