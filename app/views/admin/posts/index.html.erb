<div class="container">
  <div class="row">
    <div class="col-md-3 offset-2 pt-5">
      <h3>みんなの投稿一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto pt-5">
        <table class="table">
          <thead>
            <tr>
              <th>ユーザー</th>
              <th>タイトル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.user.name %></td>
              <td><%= post.title %></td>
              <td><%= link_to '詳細へ', admin_post_path(post) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <p><%= paginate @posts %></p>
    </div>
  </div>
</div>