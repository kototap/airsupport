<div class="container">
    <div class="row">
    <div class="col-md-3 offset-2 pt-5">
      <h3>ユーザー一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto pt-5">
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "詳細へ" ,admin_user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>