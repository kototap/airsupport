<div class="container">
  <div class="row">
    <div class="col-md-3 offset-2 pt-5">
      <h3><%= "#{@user.name}さんの投稿一覧" %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto pt-5">
        <table class="table">
          <thead>
            <tr>
              <th>タイトル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @user_posts.each do |user_post| %>
            <tr>
              <td><%= user_post.title %></td>
              <td><%= link_to '詳細へ', admin_post_path(user_post) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-2 pt-5 pb-5">
      <%= link_to "戻る", admin_user_path(@user) %>
    </div>
  </div>
</div>



