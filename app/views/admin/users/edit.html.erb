<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto py-5">
      <h3><span class="public-title"><i class="fas fa-user-edit"></i><%= @user.name %>さんの情報編集</span></h3>
    </div>
  </div>

  <div class="form-group d-flex justify-content-center">
    <%= render "public/posts/error", obj: @user %>
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <%= render "public/users/form", f: f %>
      <div class="actions d-flex justify-content-center pb-5">
        <%= f.submit "更新する", class: 'btn btn-primary btn-sm' %>
        <%= link_to "退会させる", admin_user_path(@user), method: :delete, class: 'btn btn-danger btn-sm ml-2', data: {confirm: "本当に削除しますか？"} %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= link_to :back, class: 'btn btn-sm mb-5' do %>
        <i class="fas fa-angle-double-left"></i> Back
      <% end %>
    </div>
  </div>
</div>