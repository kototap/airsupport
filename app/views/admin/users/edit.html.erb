<div class="container">

    <div class="row">
    <div class="col-md-3 offset-2 pt-5">
      <h3><%= "#{@user.name}さんの情報編集" %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-2 pt-5 center-block">

      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <table class="table table-borderless">
           <div class="form-group">
             <tr>
               <td><%= f.label :profile_image %></td>
               <td><%= f.file_field :profile_image, accept: 'image/*' %></td>
             </tr>
           </div>

           <div class="form-group">
             <tr>
               <td><%= f.label :name %></td>
               <td><%= f.text_field :name, autofocus: true %></td>
              </tr>
           </div>

           <div class="form-group">
             <tr>
               <td><%= f.label :email %></td>
               <td><%= f.email_field :email, autocomplete: "email" %></td>
              </tr>
           </div>

           <div class="form-group">
             <tr>
               <td><%= f.label :introduction %></td>
               <td><%= f.text_area :introduction %></td>
              </tr>
           </div>

           <div class="form-group">
             <tr>
               <td></td>
               <td>
                 <%= f.submit "更新する", class: 'btn btn-primary btn-sm' %>
                 <%= link_to "退会する", user_unsubscribe_path(@user.id), class: 'btn btn-danger btn-sm ml-2' %>
               </td>
           </div>
        </table>
      <% end %>
    </div>
  </div>
    <div class="row">
    <div class="col-md-3 offset-2 pt-5 pb-5">
      <%= link_to "戻る", admin_user_path(@user) %>
    </div>
  </div>
</div>