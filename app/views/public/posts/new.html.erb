<div class="container">
  <div class="row">
    <div class="col-md-4 offset-2 mt-5">
      <h3><span class="public-title">新規投稿</span></h3>
    </div>
  </div>

 <%= render "error", obj: @post %>

  <div class="row">
    <div class="col-md-7 offset-2">
      <%= form_with model: @post do |f| %>
        <table class="table table-borderless">
          <div class="form-group">
             <tr>
               <td><%= f.label :post_image %></td>
               <td><%= f.file_field :post_image, accept: 'image/*' %></td>
             </tr>
           </div>
           <div class="form-group">
             <tr>
               <td><%= f.label :title %></td>
               <td><%= f.text_field :title, placeholder: "お店や観光地の名称など", autofocus: true,class: 'form-control' %></td>
             </tr>
           </div>
           <div class="form-group">
             <tr>
               <td><%= f.label :body %></td>
               <td><%= f.text_area :body, class: 'form-control' %></td>
             </tr>
           </div>
           <div class="form-group">
             <tr>
               <td><%= f.label :airport %></td>
               <td><%= f.text_field :airport, class: 'form-control' %></td>
             </tr>
           </div>
           <div class="form-group">
             <tr>
                <td><%= f.label :tag_id %></td>
                <td><%= f.collection_select(:tag_id, Tag.all, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %></td>
             </tr>
           </div>
           <div class="form-group">
             <tr>
               <td><%= f.label :address %></td>
               <td>
                 <%= f.text_field :address, placeholder: "例）東京都〇〇区〇〇1-1-1、もしくは施設名など", class: 'form-control' %>
                 <small class="text-muted">*住所は入力しなくても投稿可能です</small>
               </td>
             </tr>
           </div>
           <div class="form-group">
             <tr>
                <td></td>
                <td>
                  <%= f.submit '投稿する', :name => 'send', class: 'mr-5 btn btn-outline-warning text-dark' %>
                  <%= f.submit '下書きに保存', :name => 'draft', class: 'mr-5 btn btn-outline-secondary' %>
                </td>
             </tr>
           </div>
        </table>
      <% end %>
    </div>
  </div>
</div>