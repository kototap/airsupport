<div class="container my-5">
  <div class="row">

    <div class="col-md-6">
      <div class="row d-flex justify-content-center">
        <div class="post-image">
          <%= image_tag @post.get_post_image, size: '350x350' %>
        </div>
      </div>

      <!--ここからブックマーク-->
      <div class="row offset-md-2 mb-4 pl-1">
        <div class="post-info my-3 h4">
        <!--ユーザーがログインしていて、投稿が公開されている時-->
          <% if @post.is_draft == false && user_signed_in? %>
            <% if @post.bookmarked_by?(current_user) %>
              <%= link_to post_bookmarks_path(@post), class: "text-dark", method: :delete do %>
                <i class="fas fa-bookmark"></i> <%= @post.bookmarks.count %>
              <% end %>
            <% else %>
              <%= link_to post_bookmarks_path(@post), class: "text-dark", method: :post do %>
                <i class="far fa-bookmark"></i> <%= @post.bookmarks.count %>
              <% end %>
            <% end %>
          <% end %>
          <!--ユーザーがログインしていない時-->
          <% unless user_signed_in? %>
            <i class="far fa-bookmark"></i> <%= @post.bookmarks.count %>
          <% end %>
        </div>
      </div>
    </div>

      <!--投稿詳細右半分-->
      <div class="col-md-6">
        <div class="row d-flex flex-column pl-1">
          <div class="post-title">
            <h3><span><%= @post.title %></span></h3>
          </div>
          <div class="post-body">
            <p class="ml-2 mt-3"><%= @post.body %></p>
          </div>
          <div class="post-tags">
            <p><i class="fas fa-tag"></i> <%= @post.tag.name if @post.tag.present? %>　|　<i class="fas fa-plane"></i> <%= @post.airport %></p>
          </div>
        </div>
        <div class="row d-flex justify-content-end pr-1">
          <%= @post.created_at.strftime('%Y/%m/%d') %>
          <% if current_user == @post.user %>
            <span>　|　</span>
            <%= link_to edit_post_path(@post.id), class: 'text-dark border-bottom text-muted' do %>
              <i class="far fa-edit"></i>
            <% end %>
            <span>　|　</span>
            <%= link_to post_path(@post.id), method: :delete, class: 'text-dark border-bottom text-muted', data: {confirm: "この投稿を削除しますか？"} do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          <% end %>
        </div>

        </div>
      </div>

    <!--コメントエリア-->
    <div class="row offset-md-1 my-2">
       <%= render "error", obj: @post_comment %>
      <h5 class="comment-title ml-1"><span><i class="far fa-comments"></i> コメント： <%= @post.post_comments.count %></span></h5>
    </div>
    <div class="row">
      <div class="col-md-5 offset-md-1">
        <% @post.post_comments.each do |post_comment| %>
          <%= image_tag post_comment.user.get_profile_image(30,30), class: 'rounded-circle border' %>
          <%= link_to user_path(post_comment.user), class: 'text-dark' do %>
            <%= post_comment.user.name %>
          <% end %>
            : <%= post_comment.comment %>
          <small class="text-muted"><p>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            <% if post_comment.user == current_user %>
              <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
            <% end %>
          </p></small>
        <% end %>
      </div>
      <div class="col-md-6">
        <% if @post.is_draft == false && user_signed_in? %>
          <%= form_with model: [@post, @post_comment] do |f| %>
            <div class="action">
              <div class="form-area">
                <%= f.text_area :comment, rows: '2', placeholder: "コメントをここに", class: 'form-control' %>
              </div>
              <div class="bottom d-flex justify-content-end">
                <%= f.submit "送信する", class: 'btn btn-outline-warning text-dark btn-sm mt-2' %>
              </div>
            </div>
          <% end %>
        <% end %>

        <!--ユーザーがログインしていないとき-->
        <div class="not-signin d-flex">
        <% unless user_signed_in? %>
          <i class="fas fa-bullhorn mt-1"></i>
          <p class="ml-4"><%= link_to 'ログイン', new_user_session_path %>して投稿をブックマークしたり、<br>
             コメントしてみよう！
          </p>
        <% end %>
      </div>

      </div>
    </div>
  </div>
