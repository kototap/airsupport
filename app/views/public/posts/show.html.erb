<div class="container my-5">
  <div class="row">

    <div class="col-md-6">
      <div class="row d-flex justify-content-center">
        <div class="post-image">
          <%= image_tag @post.get_post_image, size: '350x350' %>
        </div>
      </div>

      <!--ここからブックマーク-->
      <div class="row offset-md-2 mb-4 pl-1">
        <div class="bookmark-btn my-3 h4">
          <!--ユーザーがログインしていて、投稿が公開されている時-->
          <% if @post.is_draft == false && user_signed_in? %>
            <%= render 'public/bookmarks/bookmark-btn', post: @post %>
          <% end %>
          <!--ユーザーがログインしていない時-->
          <% unless user_signed_in? %>
            <i class="far fa-bookmark"></i> <%= @post.bookmarks.count %>
          <% end %>
        </div>
      </div>
    </div>

      <!--投稿詳細右半分-->
      <div class="col-md-6">
        <div class="row d-flex flex-column pl-1">
          <div class="post-title">
            <h3><span><%= @post.title %></span></h3>
          </div>
          <div class="post-body">
            <p class="ml-2 mt-3"><%= @post.body %></p>
          </div>
          <div class="post-tags">
            <p><i class="fas fa-tag"></i>
              <%= link_to  search_index_path(tag_id: @post.tag.id), class: 'text-dark border-bottom' do %>
                <%= @post.tag.name if @post.tag.present? %>
              <% end %>
              <span>　|　</span>
              <i class="fas fa-plane"></i> <%= link_to @post.airport, search_index_path(airport: @post.airport), class: 'text-dark border-bottom' %>
            </p>
          </div>
        </div>
        <div class="row d-flex justify-content-end pr-1">
          <%= @post.created_at.strftime('%Y/%m/%d') %>
          <% if current_user == @post.user %>
            <span>　|　</span>
            <%= link_to edit_post_path(@post.id), class: 'text-dark border-bottom text-muted' do %>
              <i class="far fa-edit"></i>
            <% end %>
            <span>　|　</span>
            <%= link_to post_path(@post.id), method: :delete, class: 'text-dark border-bottom text-muted', data: {confirm: "この投稿を削除しますか？"} do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          <% end %>
        </div>

        </div>
      </div>

    <!--コメントエリア-->
    <div class="row offset-md-1 my-2">
      <h5 class="comment-title ml-1"><i class="far fa-comments"></i> コメント</h5>
    </div>
    <div class="row">
      <div class="comment-area col-md-5 offset-md-1">
        <%= render 'public/post_comments/comment-area', post: @post %>
      </div>
      <div class="comment-form col-md-6">
        <% if @post.is_draft == false && user_signed_in? %>
          <%= render 'public/post_comments/comment-form', post: @post, post_comment: @post_comment %>
        <% end %>
        <!--ユーザーがログインしていないとき-->
        <div class="not-signin d-flex">
        <% unless user_signed_in? %>
          <i class="fas fa-bullhorn mt-1"></i>
          <p class="ml-4"><%= link_to 'ログイン', new_user_session_path %>して投稿をブックマークしたり、<br>
             コメントしてみよう！
          </p>
        <% end %>
        </div>
      </div>
    </div>

        <%= link_to 'Back', :back, class: 'btn btn-sm'  %>

  </div>
