<div class="container">
  <div class="row pt-5 mt-5">
    <div class="col-md-6">
      <h5>キーワード検索する</h5>
      <%= search_form_for @search, url: search_index_path do |f| %>
        <!--%= f.label :title_cont, "検索" %>-->
        <%= f.search_field :title_cont, placeholder: 'フリーワード', value: "" %>
        <%= f.submit "🔍" %>
      <% end %>
    </div>
  </div>

  <div class="row pt-5 mt-5">
    <div class="col-md-6">
      <h5>タグから検索する</h5>
        <%= search_form_for @search, url: search_index_path do |f| %>
          <%= f.select :tag_id_eq, options_from_collection_for_select(Tag.all, :id, :name , 1), value: "" %>
          <%= f.submit "🔍" %>
        <% end %>
    </div>
    <div class="col-md-6">
      <h5>空港から検索する</h5>
      <%= search_form_for @search, url: search_index_path do |f| %>
        <%= f.search_field :airport_cont, placeholder: '空港名', value: "" %>
        <%= f.submit "🔍" %>
      <% end %>
    </div>
  </div>
</div>



