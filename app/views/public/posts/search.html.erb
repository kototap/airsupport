<div class="container pb-5 mb-5">
  <div class="row mt-5 d-flex flex-column">
    <h2><span class="public-title"><i class="fas fa-search"></i> 検索ページ</span></h2>
    <p class="py-3">キーワードや目的、空港名から投稿を検索できます</p>
  </div>

  <div class="row card-bg">
    <div class="col-md-10 mx-auto my-5 bg-white">
      <div class="form-group row pt-5">
        <div class="col-md-6 mx-auto">
          <h4 class="mb-3"><i class="fas fa-pen"></i> フリーワードで探す</h4>
          <%= search_form_for @search, url: search_index_path, class: 'd-flex' do |f| %>
            <%= f.search_field :title_cont, placeholder: 'キーワードを入力...', value: "", class: 'form-control mr-3' %>
            <%= button_tag type: "submit", class: "btn btn-default", id: 'search-word' do %>
              <h5><i class="fas fa-search fa-lg" style="color: #ff7f50;"></i></h5>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row d-flex justify-content-center pt-5 mt-5">
        <div class="col-md-5 mb-5">
          <h4 class="mb-3"><i class="far fa-lightbulb"></i> 目的から探す</h4>
            <%= search_form_for @search, url: search_index_path do |f| %>
              <%= f.select :tag_id_eq, options_from_collection_for_select(Tag.all, :id, :name , 1), value: "", class: 'form-control' %>
              <%= button_tag type: "submit", class: "btn btn-default", id: 'search-tag' do %>
                <h5><i class="fas fa-search fa-lg" style="color: #ff7f50;"></i></h5>
              <% end %>
            <% end %>
        </div>
        <div class="col-md-5 mb-5">
          <h4 class="mb-3"><i class="fas fa-plane"></i> 空港から検索する</h4>
          <%= search_form_for @search, url: search_index_path, class: 'd-flex' do |f| %>
            <%= f.search_field :airport_cont, placeholder: '空港名', value: "", class: 'form-control' %>
            <%= button_tag type: "submit", class: "btn btn-default", id: 'search-airport' do %>
              <h5><i class="fas fa-search fa-lg" style="color: #ff7f50;"></i></h5>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>