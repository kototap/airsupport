<div class="container">
  <div class="row">
    <div class="col-md-6 pt-5 d-flex justify-content-around align-items-end">
      <h2><span class="public-title"><i class="far fa-copy"></i> 投稿一覧</span></h2>
      <p>
        <%= link_to '新しい順', posts_path, style: 'color: #ff7f50;' %>
        ／<%= link_to 'ブックマーク順', posts_path(popular: "true"), style: 'color: #ff7f50;' %>
      </p>
    </div>
  </div>
</div>

<div class="container">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-lg-4 my-4">
          <%= render 'post-card', post: post %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-6 mx-auto py-5 d-flex justify-content-center">
        <p><%= paginate @posts %></p>
      </div>
    </div>
  </div>

