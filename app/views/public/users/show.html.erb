<div class="container">
  <div class="row">
    <div class="col-md-3 pt-5">
      <table class="table table-borderless">
        <tr>
          <td>
            <%= image_tag @user.get_profile_image(150,150), class: "rounded-circle border" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= @user.name %>
          </th>
        </tr>
        <tr>
          <td>
            <%= @user.introduction %>
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to "新規投稿する", new_post_path %>
          </td>
        </tr>
        <tr>
          <td>
            ブックマークを見る
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to "ユーザーの情報編集", edit_user_path(@user.id) %>

          </td>
        </tr>
      </table>
    </div>

    <div class="col-md-9", style="background-color: orange;"></div>

  </div>
</div>