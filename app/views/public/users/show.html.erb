<div class="container">
  <div class="row mt-5">
    <%= render 'side', user: @user %>
    <div class="col-md-9">
      <div class="container">
        <div class="row">
          <% @posts.each do |post| %>
            <div class="col-lg-6 my-4">
              <%= render 'public/posts/post-card', post: post %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mx-auto py-5 d-flex justify-content-center">
          <p><%= paginate @posts %></p>
        </div>
      </div>
    </div>
  </div>
</div>